<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, class:"sr-only" %>
    <%= f.text_area :ingredients, class: "form-control", placeholder: "Ingredients" %>
  </div>
  <div class="form-group">
    <%= f.label :instructions, class:"sr-only" %>
    <%= f.text_area :instructions, class: "form-control", placeholder: "Instructions" %>
  </div>
  <div class="field">
    <%= f.select :rating,["1","2","3","4","5"], {:include_blank => 'Rating'}, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="form-group cant-see-me">
    <%= f.number_field :user_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
